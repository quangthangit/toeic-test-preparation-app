<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/home"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ui.activity.HomeActivity">

    <FrameLayout
        android:id="@+id/homeFrameLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/bottom_navigation"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <LinearLayout
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:elevation="5dp"
        android:background="@drawable/border_gray"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:id="@+id/homeOption"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:clickable="true"
            android:focusable="true"
            android:padding="5dp"
            android:foreground="@drawable/ripple_circle">

            <ImageView
                android:id="@+id/homeIcon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/icon_profile"
                app:tint="@color/bottom_nav_icon_color" />

            <TextView
                android:id="@+id/homeText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Home"
                android:textSize="10sp"
                android:textColor="@color/bottom_nav_icon_color"
                android:fontFamily="sans-serif-medium"
                tools:ignore="SmallSp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/vocabularyOption"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="5dp"
            android:gravity="center"
            android:orientation="vertical"
            android:clickable="true"
            android:focusable="true"
            android:foreground="@drawable/ripple_circle">

            <ImageView
                android:id="@+id/vocabularyIcon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/icon_lovely"
                app:tint="@color/bottom_nav_icon_color" />

            <TextView
                android:id="@+id/vocabularyText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Vocabulary"
                android:textSize="10sp"
                android:textColor="@color/bottom_nav_icon_color"
                android:fontFamily="sans-serif-medium" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/examOption"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="5dp"
            android:orientation="vertical"
            android:clickable="true"
            android:focusable="true"
            android:foreground="@drawable/ripple_circle">

            <ImageView
                android:id="@+id/examIcon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/icon_proggress"
                app:tint="#82898F" />

            <TextView
                android:id="@+id/examText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Exam"
                android:textSize="10sp"
                android:textColor="#82898F"
                android:fontFamily="sans-serif-medium"
                tools:ignore="SmallSp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/proggressOption"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="5dp"
            android:gravity="center"
            android:orientation="vertical"
            android:clickable="true"
            android:focusable="true"
            android:foreground="@drawable/ripple_circle">

            <ImageView
                android:id="@+id/proggressIcon"
                android:layout_width="24dp"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_proggress"
                app:tint="#82898F" />

            <TextView
                android:id="@+id/proggressText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Proggress"
                android:textSize="10sp"
                android:textColor="#82898F"
                android:fontFamily="sans-serif-medium" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/accountOption"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="5dp"
            android:orientation="vertical"
            android:clickable="true"
            android:focusable="true"
            android:foreground="@drawable/ripple_circle">

            <ImageView
                android:id="@+id/accountIcon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/icon_profile"
                app:tint="#82898F" />

            <TextView
                android:id="@+id/accountText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Account"
                android:textSize="10sp"
                android:textColor="#82898F"
                android:fontFamily="sans-serif-medium" />
        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
